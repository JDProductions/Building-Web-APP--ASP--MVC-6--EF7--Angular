@model AxpCallerRewrite.Models.FeatureModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 style="color: red;"><span class="glyphicon glyphicon-lock"></span>Activate Feature</h4>
    </div>
    <div class="modal-body">
        @using (Html.BeginForm("ActivateFeature", "Home"))
        {
            <div class="form-group">
                @Html.Label("EnvironmentLevel", "Environment Level")
                <div>
                    @Html.DropDownListFor(m => m.EnvironmentLevel, new SelectList(
                                      new List<Object>{
                                           new { value = "Dev" , text = "Dev"  },
                                           new { value = "QA" , text = "QA" },
                                           new { value = "Prod" , text = "Prod"}
                                        },
                                      "value",
                                      "text",
                                       2), new { @class = "form-control", required = "required" })
                    @*<select id="EnvironmentLevel" class="form-control">
                            <option>Dev</option>
                            <option>QA</option>
                            <option>Prod</option>
                        </select>*@
                </div>

                @Html.Label("FeatureId", "Feature ID")
                @Html.TextBoxFor(m => m.FeatureId, new { @class = "form-control", required = "required" })

                @Html.Label("OemId", "OEM ID")
                @Html.TextBoxFor(m => m.OemId, new { @class = "form-control", required = "required" })

                @Html.Label("StatusId", "Status ID")
                @Html.TextBoxFor(m => m.StatusId, new { @class = "form-control", required = "required" })

                @Html.Label("DirtyFlag", "Dirty Flag")
                @Html.TextBoxFor(m => m.DirtyFlag, new { @class = "form-control", required = "required" })

                @Html.Label("ProdId", "Product ID")
                @Html.TextBoxFor(m => m.ProdId, new { @class = "form-control", required = "required" })

                <button type="submit" id="btnActivateFeatureAction" class="btn btn-default">Create</button>
            </div>
        }
    </div>
</div>