@model AxpCallerRewrite.Models.FeatureModel

@{ SelectList Environments = ViewBag.Environments;}
@Html.Label("EnvironmentLevel", "Environment Level")
@Html.DropDownListFor(m => m.EnvironmentLevel, Environments, new { @class = "form-control" })

@Html.Label("CompanyIds", "Company IDs")
@Html.TextBoxFor(m => m.CompanyIds, new { @class = "form-control", required = "required", pattern = "^([0-9a-zA-Z]{3}[-]){2}[0-9a-zA-Z]{3}([\n;,]([0-9a-zA-Z]{3}[-]){2}[0-9a-zA-Z]{3})*$" })

@{ SelectList Features = ViewBag.Features;}
@Html.Label("FeatureId", "Feature")
@Html.DropDownListFor(m => m.FeatureId, Features, new { @class = "form-control" })

@{ SelectList OEMs = ViewBag.OEMs;}
@Html.Label("OemId", "OEM")
@Html.DropDownListFor(m => m.OemId, OEMs, new { @class = "form-control" })

@{ SelectList Products = ViewBag.Products;}
@Html.Label("ProdId", "Product")
@Html.DropDownListFor(m => m.ProdId, Products, new { @class = "form-control"})