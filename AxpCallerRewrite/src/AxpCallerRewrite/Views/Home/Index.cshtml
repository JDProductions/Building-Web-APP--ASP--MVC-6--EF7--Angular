@model AxpCallerRewrite.Models.HomeViewModel
@addTagHelper "*, Microsoft.AspNet.Mvc.TagHelpers"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

    <title>Starter Template for Bootstrap</title>

    <!-- Bootstrap core CSS -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">


    <!-- Custom styles for this template -->
    <link type="text/css" href="~/css/site.css" rel="stylesheet">
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="form-group">
                <label>Environment:</label>
            </div>
            <div class="col-xs-5 selectContainer">
                <div class="form-group">
                    @*<select asp-for="Environment" asp-items="ViewBag.Environments" class="form-control" id="EnvironmentLevel" name="EnvironmentLevel"></select>*@
                    <fieldset>
                        <select class="form-control" id="EnvironmentLevel">

                            <option value="Dev" selected="selected">http://dev/OEConnection.Application.SubscriptionController.Web/ContollerService.svc/DoWork</option>

                            <option value="QA">http://QA/OEConnection.Application.SubscriptionController.Web/ContollerService.svc/DoWork</option>

                            <option value="NewQA">http://newQA/OEConnection.Application.SubscriptionController.Web/ContollerService.svc/DoWork</option>

                            <option value="Prod">http://prod/OEConnection.Application.SubscriptionController.Web/ContollerService.svc/DoWork</option>
                        </select>


                    </fieldset>
                    <input type="text" class="form-control" id="labelEnvironment" readonly @ViewBag.labelEnvironment>
                </div>
            </div>
            <div class="form-group col-md-12">
                <label>Company Ids:</label>
                <textarea class="form-control" rows="5" id="textAreaCompanyIDs"></textarea>

                <form id="fileUploadForm" method="post" enctype="multipart/form-data" target="uploadTarget"
                      action="@Url.Action("ProcessFile", "Home")">
                    <input type="file" name="fileToRead" />
                    <button id="uploadButton">Upload</button>
                </form>
                <iframe id="uploadTarget" name="uploadTarget" style="display: none"></iframe>
            </div>
            <div class="form-group col-md-12">
                <label>Axp Template</label>
                <textarea class="form-control" rows="5" id="textAreaAXPTemplate"></textarea>
                <button id="sendAxpTemplate" class="btn btn-primary" data-target="@Url.Action("SendAxpTemplate", "Home")">Send AXP Template</button>
            </div>
        </div>
    </div>

    <div class="container">

    </div>

    <!-- /.container -->
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script type="text/javascript " src="~/js/site.js"></script>
    <script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery.min.js"><\/script>')</script>
    <script src="../../dist/js/bootstrap.min.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="../../assets/js/ie10-viewport-bug-workaround.js"></script>



</body>
</html>
