@using System.Threading.Tasks
@using Microsoft.AspNet.Mvc.Rendering
@model AxpCaller.ViewModels.ActivateViewModel

@{
    ViewBag.Title = "Activate Page";
}

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div>

    <form method="post" class="form-group" id="Activate" enctype="multipart/form-data">
        <div asp-validation-summary="ValidationSummary.ModelOnly"></div>
        <div>
            <label asp-for="CompanyID">CompanyID</label>
        </div>
        <textarea cols="100" rows="10" > @ViewBag.CompanyIDTextArea</textarea>
        <span asp-for="CompanyID"></span>

        @using (Html.BeginForm("Activate", "AppController"))
        {
            
                <button type="submit" class="btn btn-default">Activate</button>
            

        }

        @using (Html.BeginForm("UploadCompanyID", "App"))
        {
            <div>
                <input type="file" name="file" asp-for="CompanyID" />
                <button type="submit" class="btn btn-default">Upload IDS</button>
            </div>

        }

        <div>
            @using (Html.BeginForm("UploadFile", "App", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                <input type="file" name="file" asp-for="AxpTemplate" />
                <input type="submit" value="Submit" />
            }

            <div>
                <label>AXP Template</label>
                <div>

                    <textarea cols="100" rows="10">@ViewBag.AxpTemplateArea</textarea>
                    <span asp-for="AxpTemplate"></span>
                </div>
            </div>
        </div>
    </form>





</div>
