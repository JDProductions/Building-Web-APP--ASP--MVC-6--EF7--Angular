@model AxpCaller.ViewModels.ActivateViewModel

@{
    ViewBag.Title = "Activate Page";
}

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div>

    <form method="post" class="form-group" id="Activate">
        <div asp-validation-summary="ValidationSummary.ModelOnly"></div>
        <div>
            <label asp-for="CompanyID">CompanyID</label>
        </div>
        <textarea cols="100" rows="10" asp-for="CompanyID"></textarea>
        <span asp-for="CompanyID"></span>

        @using (Html.BeginForm("Activate", "AppController"))
        {
            <div>
                <button type="submit" class="btn btn-default">Activate</button>
            </div>
        }

        <div>
            <input type="file" name="file" />
            <a href='@Url.Action("UploadFile", "App")' class="btn btn-default">Upload</a>



        </div>

        <div>
            <label>AXP Template</label>
            <div>
                <textarea cols="100" rows="10"></textarea>
            </div>
        </div>


    </form>

</div>
